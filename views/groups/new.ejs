<main class="contenedor contenedor-formularios no-padding">

    <h1><%= headLine %></h1>

    <form action="/group/new" method="POST" class="default-form" >
        <div class="campo">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Group Name">
        </div>

        <div class="campo descripcion">
            <label for="description">Description</label>
            <div class="contenedor-editor">
                <input type="hidden" name="description"  id="x" >
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label for="category">Category</label>
            <select name="category" >
                <option value="" selected disabled> -- Choose a Category --</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>"><%= category.name %></option>
                <% }); %>
            </select>
        </div>

        <div class="campo">
            <label for="image">Image</label>
            <input type="file" name="image">
        </div>

        <div class="campo">
            <label for="url">Website</label>
            <input type="url" name="url" placeholder="Website">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Create Group" class="btn btn-rosa">
        </div>

    </form>
</main>
