<main class="contenedor contenedor-formularios no-padding">

    <h1><%= headLine %></h1>

    <form  method="POST" class="default-form" >
        <div class="campo">
            <label for="name">Name</label>
            <input type="text" value="<%= group.name %>" name="name" placeholder="Group Name">
        </div>

        <div class="campo descripcion">
            <label for="description">Description</label>
            <div class="contenedor-editor">
                <input type="hidden" value="<%= group.description %>" name="description"  id="x" >
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label for="category">Category</label>
            <select name="category" >
                <option value="" selected disabled> -- Choose a Category --</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= (group.categoryId === category.id ) ? 'selected' : '' %> ><%= category.name %></option>
                <% }); %>
            </select>
        </div>

        <div class="campo">
            <label for="url">Website</label>
            <input type="url" value="<%= group.url %>" name="url" placeholder="Website">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Update Group" class="btn btn-rosa">
        </div>

    </form>
</main>
