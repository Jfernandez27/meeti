<main class="contenedor contenedor-formularios">

    <h1><%= headLine %></h1>

    <form method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="">Current image</label>
                <% if (group.image) { %>
                    <img src="/uploads/groups/<%= group.image %>" alt="<%= group.name %>" width="200">
                <% } else { %>
                    <p>The group has no images</p>
                <% } %>
            </div>
        <div class="campo">
            <label for="image">Image</label>
            <input type="file" name="image">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Update Image" class="btn btn-rosa">
        </div>

    </form>
</main>
