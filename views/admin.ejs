<main class="contenedor panel-administracion">
    <h1><%= headLine %></h1>

    <div class="contenedor-botones">
        <a href="/group/new" class="btn btn-amarillo">New group</a>
        <a href="/meeti/new" class="btn btn-azul">New meeti</a>
        <a href="/profile/edit" class="btn btn-rosa">Edit Profile</a>
        <a href="/profile/image" class="btn btn-amarillo">Profile Image</a>
    </div>

    <div class="seccion-admin">
        <h2>My Meeti's</h2>
        <ul>
            <li>
                <div class="informacion-admin">
                    <p class="fecha">Monday, June 17, 2024</p>
                    <h3>E-Commerce Santiago Summit</h3>
                    <small>23 participants</small>
                </div>
                <div class="acciones contenedor-botones">
                    <a href="#" class="btn btn-verde">Edit</a>
                    <a href="#" class="btn btn-azul2">Participants</a>
                    <a href="#" class="btn btn-rojo">Delete</a>
                </div>
            </li>
            <li>
                <div class="informacion-admin">
                    <p class="fecha">Monday, June 24, 2024</p>
                    <h3>National e-sports tournament</h3>
                    <small>597 participants</small>
                </div>
                <div class="acciones contenedor-botones">
                    <a href="#" class="btn btn-verde">Edit</a>
                    <a href="#" class="btn btn-azul2">Participants</a>
                    <a href="#" class="btn btn-rojo">Delete</a>
                </div>
            </li>
        </ul>
    </div>

    <div class="seccion-admin">
        <h2>My Groups</h2>

        <% if(groups.length){ %>
            <ul>
                <% groups.forEach(group => { %>
                    <li>
                        <div class="informacion-admin">
                            <h3><%= group.name %></h3>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/group/edit/<%= group.id %>" class="btn btn-verde">Edit</a>
                            <a href="/group/image/<%= group.id %>" class="btn btn-azul2">Image</a>
                            <a href="/group/delete/<%= group.id %>" class="btn btn-rojo">Delete</a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>You do not manage any groups</p>
        <% } %>
    </div>

</main>