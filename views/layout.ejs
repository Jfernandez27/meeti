    <link rel="stylesheet" href="/css/app.css">
    
</head>
<body>
    <header class="site-header contenedor">
        <a href="/">
            <img src="/img/logo.png" alt="Logo Meeti">
        </a>
        <nav class="nav">
            <a href="#">Create Group</a>
            <a href="/login">Log in</a>
            <a href="/signin">Sign in</a>
        </nav>
    </header>

    <% if (locals.messages) { %>
        <% const category = Object.keys(locals.messages) %>
        <% if (category.length){ %>
            <% locals.messages[category].forEach(alert =>{ %>
                <div class="alertas">
                    <p class="alerta <%= category %>"><%= alert %></p>
                </div>
            <% }) %>
        <% } %>
    <% } %>

    <%- body %>

    <footer class="site-footer contenedor">
        <nav class="nav">
            <a href="#">Create Group</a>
            <a href="/login">Log in</a>
            <a href="/signin">Sign in</a>
        </nav>
        <p class="copyright">All rights reserved Meeti <%- year %> &copy; </p>
    </footer>

    <script type="text/javascript" src="https://unpkg.com/trix@2.0.8/dist/trix.umd.min.js"></script>
