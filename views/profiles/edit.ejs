<main class="contenedor contenedor-formularios no-padding">
    <h1><%- headLine %></h1>

    <form class="default-form" action="/profile/edit" method="POST">
        <div class="campo">
            <label>Name</label>
            <input type="text" name="name" value="<%= user.name %>" >
        </div>
        <div class="campo descripcion">
            <label>Who I am</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="bio" value="<%= user.bio %>"  >
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" value="<%= user.email %>" >
        </div>
        <div class="campo enviar">
            <a href="/user/password" class="btn btn-verde">Change Password</a>
            <input type="submit" class="btn btn-rosa" value="Update Profile">
        </div>
    </form>
</main>