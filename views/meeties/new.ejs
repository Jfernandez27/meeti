<main class="contenedor contenedor-formularios">
    <h1><%- headLine %></h1>
    <form class="default-form" action="/nuevo-meeti" method="POST">
        <legend>About Meeti</legend>
        <div class="campo">
            <label>Group</label>
            <select name="groupId">
                <option value="" disabled selected>-- Choose a Group --</option>
                <% if(groups.length > 0 )  { %>
                    <% groups.forEach(group => {Â  %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Title</label>
            <input type="text" name="title" placeholder="Title of the Meeti">
        </div>
        <div class="campo">
            <label>Guest</label>
            <input type="text" name="guest" placeholder="Name of Guest or Speaker (if applicable)">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Date</label>
                <input type="date" name="date" placeholder="Meeti Date">
            </div>
            <div class="campo">
                <label>Time</label>
                <input type="time" name="time" placeholder="Meeti Time">
            </div>
        </div>
        <div class="campo">
            <label>Capacity</label>
            <input type="number" min="1" name="capacity" placeholder="Meeti quota (if applicable)">
        </div>
        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Meeti Location</legend>

        <div class="campo buscador">
            <label>Enter the Meeti Address</label>
            <div class="contenedor-input">
                <input type="text" id="formSearch" placeholder="Location">
                <small>The assistant will enter an estimated address</small>
            </div>
        </div>

        <div class="campo mapa">
            <div id="map"></div>
            <p class="informacion">Move the Pin towards the exact point if necessary</p>
        </div>

        <p class="informacion">Please confirm that the following fields are correct:</p>
        <div class="campo">
            <label>Address</label>
            <input type="text" id="address" name="address" placeholder="Address" >
        </div>
        <div class="campo">
            <label>City</label>
            <input type="text" id="city" name="city" placeholder="City" >
        </div>
        <div class="campo">
            <label>State</label>
            <input type="text" id="state" name="state" placeholder="State" >
        </div>
        <div class="campo">
            <label>Country</label>
            <input type="text" id="country" name="country" placeholder="Country" >
        </div>
            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Create Meeti">
        </div>
    </form>
</main>
